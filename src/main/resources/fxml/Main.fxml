<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="borderPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0" prefWidth="1100.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.mateuszmazewski.abcsimulator.controller.MainController">
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <MenuBar>
              <menus>
                <Menu mnemonicParsing="false" text="%topMenuBar.app">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#closeApp" text="%topMenuBar.app.close" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="%topMenuBar.help">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#showAboutDialog" text="%topMenuBar.help.about" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
         </children>
      </VBox>
   </top>
   <left>
       <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
           <children>
               <fx:include fx:id="parameters" source="Parameters.fxml" />
               <fx:include fx:id="results" source="Results.fxml" />
           </children>
       </VBox>
   </left>
   <bottom>
      <Slider fx:id="iterSlider" minorTickCount="0" showTickLabels="true" showTickMarks="true" snapToTicks="true" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </Slider>
   </bottom>
</BorderPane>
